{
  "name": "aicommitsummarizer",
  "displayName": "AI Commit Summarizer",
  "description": "VS Code extension to summarize staged git changes using the Azure OpenAI GPT-4 or GPT5 models",
  "version": "0.2.4",
  "icon": "media/marketplace-icon.png",
  "publisher": "Steven77nl",
  "repository": {
    "type": "git",
    "url": "https://github.com/Steven77nl/aicommit.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "AI"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aicommitsummarizer.generateSummary",
        "title": "AI"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "aicommitsummarizer.generateSummary",
          "when": "scmProvider == git",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aicommitsummarizerExtension",
          "title": "AI Commit Summarizer",
          "icon": "media/my-icon-dark.svg",
          "iconDark": "media/my-icon-light.svg"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "AI Commit Summarizer Configuration",
      "properties": {
        "aicommitsummarizer.azureEndpoint": {
          "type": "string",
          "description": "Azure OpenAI endpoint URL (e.g. https://your-resource.openai.azure.com/)"
        },
        "aicommitsummarizer.azureDeployment": {
          "type": "string",
          "description": "Azure OpenAI deployment name (e.g. gpt-41-nano or gpt-5-nano)"
        },
        "aicommitsummarizer.userPrompt": {
          "type": "string",
          "description": "Instruction prompt for the AI",
          "default": "Summarize these staged changes for a concise commit message. Keep the message short, max 200 characters"
        },
        "aicommitsummarizer.gptVersion": {
          "type": "string",
          "description": "Which GPT Version is being used",
          "enum": [
            "GPT4",
            "GPT5"
          ],
          "default": "GPT4"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.70.0",
    "typescript": "^4.8.4",
    "vscode-test": "^1.6.0"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
