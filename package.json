{
  "name": "aicommit",
  "displayName": "AI Commit Summarizer",
  "description": "VS Code extension to summarize staged git changes using Azure OpenAI GPT-4",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "AI"
  ],
  "activationEvents": [
    "onCommand:aicommit.generateSummary"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aicommit.generateSummary",
        "title": "AI-Summarize Staged Changes"
      }
    ],
    "scm/titleMenus": [
      {
        "command": "aicommit.generateSummary",
        "when": "scmProvider == git",
        "group": "navigation"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "AI Commit Summarizer Configuration",
      "properties": {
        "aicommit.azureEndpoint": {
          "type": "string",
          "description": "Azure OpenAI endpoint URL (e.g. https://your-resource.openai.azure.com/)"
        },
        "aicommit.azureDeployment": {
          "type": "string",
          "description": "Azure OpenAI deployment name for GPT-4"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.70.0",
    "typescript": "^4.8.4",
    "vscode-test": "^1.6.0"
  },
  "dependencies": {
    "20": "^3.1.9",
    "node-fetch": "^2.7.0"
  }
}
