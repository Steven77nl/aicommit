{
  "name": "aicommit",
  "displayName": "AI Commit Summarizer",
  "description": "VS Code extension to summarize staged git changes using Azure OpenAI GPT-4",
  "version": "0.1.3",
  "icon": "media/marketplace-icon.png",
  "publisher": "Steven77nl",
  "repository": {
    "type": "git",
    "url": "https://github.com/Steven77nl/aicommit.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "AI"
  ],
  "activationEvents": [
    "onCommand:aicommit.generateSummary"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aicommit.generateSummary",
        "title": "AI"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "aicommit.generateSummary",
          "when": "scmProvider == git",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "myExtension",
          "title": "AI Commit",
          "icon": "media/my-icon-dark.svg",
          "iconDark": "media/my-icon-light.svg"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "AI Commit Summarizer Configuration",
      "properties": {
        "aicommit.azureEndpoint": {
          "type": "string",
          "description": "Azure OpenAI endpoint URL (e.g. https://your-resource.openai.azure.com/)"
        },
        "aicommit.azureDeployment": {
          "type": "string",
          "description": "Azure OpenAI deployment name (e.g. gpt-41-nano)"
        },
        "aicommit.userPrompt": {
          "type": "string",
          "description": "Instruction prompt for the AI",
          "default": "Summarize these staged changes for a concise commit message. Keep the message short, max 200 characters"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.70.0",
    "typescript": "^4.8.4",
    "vscode-test": "^1.6.0"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
